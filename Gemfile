# frozen_string_literal: true

source 'https://rubygems.org'

ruby '>= 3.0'

# Web framework and server
gem 'sinatra', '~> 4.0'
gem 'sinatra-contrib', '~> 4.0'
gem 'puma', '~> 6.0'

# Database
gem 'sqlite3', '~> 1.7'
gem 'sequel', '~> 5.0'

# Scheduling
gem 'rufus-scheduler', '~> 3.9'

# Network testing
gem 'net-ping', '~> 2.0'

# HTTP client for HTTP health checks
gem 'faraday', '~> 2.0'
gem 'faraday-follow_redirects', '~> 0.3'

# JSON handling
gem 'json', '~> 2.0'

group :development, :test do
  gem 'rspec', '~> 3.12'
  gem 'rack-test', '~> 2.1'
  gem 'rubocop', '~> 1.50'
end
