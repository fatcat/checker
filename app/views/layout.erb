<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Network Checker</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="stylesheet" href="/css/app.css">
  <style id="theme-styles"><%= Checker::ThemeLoader.theme_css_vars(Checker::Configuration.get('theme')) %></style>
  <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
</head>
<body data-theme="<%= Checker::Configuration.get('theme') %>">
  <nav class="navbar">
    <div class="nav-brand">Network Checker</div>
    <ul class="nav-links">
      <li><a href="/" class="nav-link">Dashboard</a></li>
      <li><a href="/hosts" class="nav-link">Hosts</a></li>
      <li><a href="/settings" class="nav-link">Settings</a></li>
    </ul>
  </nav>

  <main class="container">
    <%= yield %>
  </main>

  <script src="/js/app.js"></script>
  <script>
    // Theme loader utility - allows dynamic theme switching
    window.ThemeManager = {
      async applyTheme(themeId) {
        try {
          const response = await fetch(`/api/themes/${themeId}/css`);
          const css = await response.text();

          let styleEl = document.getElementById('theme-styles');
          if (!styleEl) {
            styleEl = document.createElement('style');
            styleEl.id = 'theme-styles';
            document.head.appendChild(styleEl);
          }
          styleEl.textContent = css;
          document.body.setAttribute('data-theme', themeId);
        } catch (error) {
          console.error('Failed to apply theme:', error);
        }
      }
    };
  </script>
</body>
</html>
